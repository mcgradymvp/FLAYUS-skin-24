				<container>
					<layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="2" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="12" apply_to_children="true" />
					<widget class="label" alignment="left, centre_y" auto_size="vertical" size="small" font="title">
						<translation id="text" translation_id="227783" type="use" value="Squad Status" />
					</widget>

					<widget class="squad_status_label" id="squP" style="bold" alignment="left, top" auto_size="vertical">
						<record id="object_property" get_property="Pccs" />
					</widget>
				</container>

				<container>
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />
					<layout class="arrange_horizontal_attachment" layout="-1, -1" offset="0" gap="0" />

					<container>
						<layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="2" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="12" apply_to_children="true" />
						<widget class="label" alignment="left, centre_y" auto_size="vertical" size="small" font="title">
							<translation id="text" translation_id="247713" type="use" value="Personality" />
						</widget>

						<widget class="personality_label" id="PPr2" spec="text" alignment="left,top" auto_size="vertical">
							<record id="object_property" get_property="PPst" />
						</widget>
					</container>
				</container>
			</container>
		</container>
