<?xml version='1.0' encoding='utf-8'?>
<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />
	<container class="subsection_box">
		<layout class="arrange_vertical_attachment" alignment="top,extend" gap="4" offset="0" />
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

		<!--header-->
		<widget class="link_button" auto_size="all" spec="text" embed_in_frame="true" alignment="left,centre_y" font="title" colour="text" red_replacement="text" appearance="buttons/link/title/button" section="tHie">
			<translation id="text" translation_id="447647" type="use" value="Squad Hierarchy[COMMENT: Team Dynamics: Team Hierarchy Link]" />
			<layout class="stick_to_sides_attachment" alignment="top,left" inset="8,8" />
			<record id="object_property">
				<integer id="get_property" value="Pcte" />
				<integer id="set_property" value="objt" />
			</record>
		</widget>
		<!--body-->
		<container>
			<layout class="arrange_vertical_attachment" layout="-7, -5,1,35" offset="0" />
			<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />
		

			<!--category and description-->
			<container>
				<layout class="arrange_vertical_attachment" layout="28, -1" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal" inset="10" apply_to_children="true" />

				<!-- Hierarchy category header-->
				<container>
					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
					<layout class="arrange_vertical_attachment" alignment="middle" offset="0" gap="0" />

					<container class="bordered_box" id="tmCc" appearance="boxes/custom/hierarchy/header/paper"  height="22">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

						<widget class="text" id="tmCl" multiline="false" alignment="centre" spec="text" style="semi_bold" colour="black" />
					</container>
				</container>

				<!-- Hierarchy description and prop/cons-->
				<container>
					<layout class="arrange_vertical_attachment" alignment="top, extend" offset="0" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

					<container>
						<layout class="stick_to_sides_attachment" alignment="top" inset="0" apply_to_children="true" />
						<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0" />
						<layout class="arrange_horizontal_attachment" alignment="left, extend" offset="0" gap="3" />

						<container width="16" id="inDC">
							<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" />
