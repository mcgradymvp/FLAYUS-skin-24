<?xml version='1.0' encoding='utf-8'?>
<panel>

	<layout class="arrange_vertical_attachment" layout="55" offset="0" />
	<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

	<container height="50">
