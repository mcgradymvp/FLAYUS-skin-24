<?xml version="1.0" encoding="utf-8"?>
<panel>
  <layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

  <boolean id="smal" value="true"/>

  <container>
    <layout class="arrange_vertical_attachment" alignment="top, extend" offset="0" gap="0"/>
    <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="10"/>

    <container height="15">
      <layout class="stick_to_sides_attachment" alignment="left" inset="0" apply_to_children="true" />
      <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

      <string id="skin_style" value="title link" />

      <!-- Linked header -->
      <widget class="link_button" section="PHst" auto_size="all">
        <translation id="text" translation_id="247605" type="use" value="Career Stats" />
      </widget>
    </container>

    <!-- Spacer -->
    <container height="3"/>

    <widget class="table" id="phst" layout="80,1,1,-1,50,40" fixed_size_rows="true" row_height="25" row_spacing="1">
      <list id="column_display_properties">
        <record index="0" sort_disabled="true" />
        <record index="1" hidden="true" />
        <record index="2" hidden="true" />
        <record index="3" sort_disabled="true" right="10"/>
        <record index="4" sort_disabled="true" />
        <record index="5" sort_disabled="true" />
      </list>
      <list id="column_properties">
        <record index="0" alignment="left,centre_y" colour="faded text" size="small"/>
        <record index="1" alignment="left"/>
        <record index="2" alignment="left"/>
        <record index="4" alignment="left,centre_y"/>
        <record index="5" alignment="left,centre_y" />
      </list>
    </widget>
  </container>
</panel>
