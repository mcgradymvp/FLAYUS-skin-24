<?xml version='1.0' encoding='utf-8'?>
<panel>
	<layout class="arrange_vertical_attachment" layout="-1,15" gap="-5"/>
	<layout class="stick_to_sides_attachment" alignmnet="all" inset="0" apply_to_children="true" />

	<!-- Profile picture -->
	<widget class="picture" id="prop" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre_x">
		<record id="object_property">
			<list id="get_properties">
				<!--Facegen data request-->
				<record get_property="fcgn" />
				<!--Fake name request-->
				<record get_property="Pfke" />
				<record get_property="prpc" set_property="valu" />
			</list>
		</record>
	</widget>
	
	<container height="15">
		<layout class="stick_to_sides_attachment" alignmnet="all" inset="0" apply_to_children="true" />

		<container id="info">
			<layout class="arrange_vertical_attachment" layout="-1,10" offset="0" gap="0" />
			<layout class="stick_to_sides_attachment" alignmnet="horizontal" inset="0" apply_to_children="true" />

			<widget class="person_button" id="perM" size="9" style="text" alignment="centre,top,can_scale">
				<record id="object_property">
					<integer id="get_property" value="objt" />
					<integer id="set_property" value="valu" />
				</record>
			</widget>
			<widget class="label" id="nofo" alignment="centre,top,can_scale">
			<translation id="text" translation_id="320493" type="use" value="None currently[COMMENT: text indicating that there is no person to view here currently (e.g. a manager, captain, vice captain etc.)]" />
		</widget>
		</container>

		
	</container>
</panel>