<panel>
  <layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="10" />

  <container>
    <layout class="arrange_vertical_attachment" alignment="bottom" offset="2" gap="0" />
    <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="5" />

	<!-- Player picture -->
		<widget class="object_portrait_picture" id="pict" scale_picture="true" image_alignment="centre, top">
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0,0,30,0"/>
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0"/>

			<record id="object_property">
				<integer id="get_property" value="objt"/>
				<integer id="set_property" value="objt"/>
			</record>
		</widget>
				
   <container class="bordered_box" appearance="boxes/custom/darken/rounded/no margin/paper">
      <layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="-6" do_not_size="true" />
      <layout class="fit_children_attachment" alignment="vertical, fill" offset="0" gap="-6"/>
      <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

      <widget class="text" id="name" colour="text" size="small" alignment="centre,can_scale" auto_size="vertical" multiline="false" style="semi_bold"/>
      <widget class="dashed_number_label" id="avra" size="small" auto_size="vertical" alignment="centre, can_scale" colour="faded white" format="[%fraction#1-2.1]" />
    </container>

  </container>

</panel>