<panel>
	<layout class="arrange_vertical_attachment" alignment="top,extend" gap="0" offset="0"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

	<!--background colour-->
	<widget class="picture" id="bkcl" height="4" file="boxes/main/contrast/paper" scale_picture="true" rthr="68">
	</widget>

	<!--team name and scores-->
	<container height="35">
		<layout class="arrange_horizontal_attachment" alignment="right,extend" gap="0" offset="0"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>
	
	<widget class="match_team_logo_picture" id="TeLo" width="45" height="45" alignment="left,centre_y">
		<layout class="stick_to_sides_attachment" alignment="left" inset="0" />
    </widget>

		<!-- team name -->
		<widget class="text" id="mitn" size="12" style="semi_bold" width="180" alignment="centre_x,centre_y"/>

		<!-- aggregate score -->
		<widget class="text" id="mita" auto_size="horizontal" spec="title" alignment="right,centre_y" size="10" multiline="false"/>

		<!-- score -->
		<widget class="text" id="mits" auto_size="horizontal" alignment="right,centre_y" size="12" multiline="false" style="bold"/>

	</container>

	<!--incidents-->
	<widget class="table" id="miit" layout="-1,20" mode="fill_rows" row_spacing="0" auto_size_rows="true" fixed_size_rows="false">

		<list id="column_widget_properties">
			<record index="0" spec="text" auto_size="vertical" alignment="right,centre_y" size="small"/>
			<record index="1" alignment="centre" auto_size="vertical" size="small" navigation_focus_target="false"/>
		</list>

		<list id="column_table_properties">
			<record index="0" id="text" top="4" bottom="4" />
			<record index="1" id="icon" left="4" top="4" bottom="4" />
		</list>

	</widget>

</panel>