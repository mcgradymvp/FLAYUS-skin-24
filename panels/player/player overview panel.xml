            <record id="object_property" get_property="objt" set_property="objt"/>
        </container>

        <!-- TABBED PANE | 807/800 -->
        <container class="tabs" id="potp" default_item="pot1" save_session_state="true" default_width="-780" minimum_width="780" priority="1">
