<panel>
	<attachment_group class="vertical_arrange" vertical_alignment="top,extend" vertical_offset="0" horizontal_alignment="horizontal" horizontal_inset="0" />

	<list id="properties_to_forward">
		<record get_property="InfT" set_property="text" target="InfT"/>
	</list>

	<container id="staf" height="180">
		<attachment_group class="vertical_arrange" vertical_layout="100,20,10" horizontal_alignment="horizontal" vertical_inset="0" />

		<!-- Portrait -->
		<widget class="object_portrait_picture" scale_picture="true" image_alignment="centre">
			<record id="object_property" get_property="objt" set_property="objt"/>
		</widget>


			<!-- Person name -->
			<widget class="person_button" alignment="centre_x,centre_y" style="semi_bold" info_popup_enabled="true" info_popup_alignment="centre,centre_y" icon_enabled="true" person_is_player="true" auto_size="vertical">
				<record id="object_property" get_property="objt" set_property="valu"/>
			</widget>

			<!-- text label -->
			<widget class="text" id="InfT" size="small" colour="faded text" auto_size="vertical" alignment="centre_x,centre_y">
			</widget>
	
	</container>
</panel>