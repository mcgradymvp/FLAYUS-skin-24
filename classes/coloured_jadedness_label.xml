
<!-- setting the 'icon' property on this should change the root folder for the appearance used to indicate checked states. icon="checkbox" would be the default -->
<class class="coloured_jadedness_label" parent="number_label" alignment="centre" format="[%number#1-nth]">
  <list id="value_list">
    <record min_value="-501" max_value="-301" colour="grey">
        <translation id="text" type="use" value="벤치워머"/>
		<translation id="hint" type="use" value="경기 출전량이 현저히 부족한 상태입니다."/>
    </record> 
    <record min_value="-300" max_value="-101" colour="cyan" >
        <translation id="text" type="use" value="피로가 뭐죠?" />
		<translation id="hint" type="use" value="적당한 로테이션으로 피로가 거의 없는 상태입니다."/>
    </record> 
    <record min_value="-100" max_value="100" colour="yellow" >
        <translation id="text" type="use" value="약간의 피로감" />
		<translation id="hint" type="use" value="잦은 출전으로 피로가 어느정도 쌓여있는 상태입니다."/>
    </record> 
    <record min_value="101" max_value="300" colour="orange" >
        <translation id="text" type="use" value="피로누적" />
		<translation id="hint" type="use" value="연속된 출전으로 피로가 많이 쌓인 상태입니다."/>
    </record> 
    <record min_value="301" max_value="501" colour="red" >
        <translation id="text" type="use" value="쉬고싶다" />
		<translation id="hint" type="use" value="선수가 혹사당하고 있습니다. 휴식이 필요한 상태입니다."/>
    </record> 
  
  </list>
</class>